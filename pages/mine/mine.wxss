/* pages/mine/mine.wxss */
page{
  color: gray;
}
.userinfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background: #f0145a;
   width: 100%; 
  height: 300rpx;
  color:white;
}
.userinfo-btn{
  margin-top: 50rpx;
  background: none !important;
  color: #fff !important;
  font-size: 40rpx;
}
.userinfo-avatar{
  border-radius: 50%;
  width:100rpx;
  height:100rpx;
}
/* 我的订单 */
.order{
  font-size: 34rpx;
  display:flex;
  justify-content: space-between;
  padding:20rpx;
}
/* 分类导航条 */
.navs{
  display:flex;
  justify-content:space-around;
  padding:20rpx 0;
  font-size:28rpx;
}
.navs-items{
  display:flex;
  flex-direction: column;
  align-items: center;
}
.navs-items image{
  width:64rpx;
  height:64rpx;
  margin-bottom:20rpx;
}
/* 清单 */
.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  color: gray;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.person-line {
  width: 80%;
  height: 2rpx;
  background: lightgray;
  margin-left: 90rpx;
}