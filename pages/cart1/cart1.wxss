/* pages/cart1/cart1.wxss */
.cart-container{
  font-size:14px;
  margin-top:80rpx;
  height:750rpx;
  display:flex;
  flex-direction: column;
  align-items:center;
  justify-content:space-around;
}
.cart-container image{
  width:50%;
}
.cart-container .btn{
  width:50%;
  border: 1px solid rgb(60, 27, 90);
  color:rgb(60, 27, 90);
  font-size:14px;
}

/* 如果本地有缓存数据 所显示的ui样式 */
page{
  background:#F3F4F5;
}
.goodsCard{
  height:220rpx;
  display:flex;
  padding:20rpx;
  box-sizing: border-box;
  align-items: center;
  background:#fff;
  margin-bottom:10rpx;
}
.card-img{
  width:150rpx;
  margin:0 20rpx;
}
.card-info{
  height:100%;
  flex:1;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
}
.info-detail{
  display:flex;
  justify-content: space-between;
}
.info-detail .price{
  color:red;
}
.footer{
  height:120rpx;
  width:100%;
  background:white;
  position:fixed;
  z-index:10;
  left:0;bottom:0rpx;
  border-top:1px solid rgb(141, 141, 141);
  display:flex;
  justify-content: space-between;
  align-items: center;
  padding-left:20rpx;
  box-sizing:border-box;
}
.footer button{
  width:240rpx;
  height:100%;
  border-radius: 0;
  font-size:14px;
  line-height:120rpx;
  margin:0;
}
.footer .total{
  color:red;
}
.scroll {
   margin-bottom: 120rpx; 
}

.btns{
  border-radius:2.5px;
  border:1px solid #908A8F;
  width:200rpx;
  height:60rpx;
  display:flex;
}
.btns .count{
  font-size:12px;
  border-left:1px solid #908A8F; 
  border-right:1px solid #908A8F;
}
.btns>text{
  width:33.33%;
  height:100%;
  line-height: 60rpx;
  text-align: center;
}
.btns>.add.disabled{
  color:#ccc;
}
.btns>.del.disabled{
  color:#ccc;
}